{
  "name": "qiwi-substrate-monorepo",
  "workspaces": [
    "packages/*"
  ],
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "clean": "lerna clean --yes && lerna run clean && yarn clean:target && yarn clean:buildcache && yarn clean:docs",
    "prebuild": "tsc -b packages/facade/tsconfig.json",
    "clean:buildcache": "rm -rf packages/**/buildcache",
    "clean:target": "rm -rf packages/**/target",
    "clean:docs": "rm -rf packages/**/docs",
    "build": "yarn clean && yarn prebuild && lerna run build --stream --concurrency 2",
    "libdef": "yarn clean && lerna run --stream libdef",
    "bootstrap": "lerna bootstrap",
    "test": "lerna run test --stream --concurrency 2 && yarn format && yarn lint",
    "jest": "jest",
    "test:report": "yarn test && yarn coveralls:push",
    "coveralls:push": "cat ./coverage/lcov.info | coveralls || exit 0",
    "lint": "eslint 'packages/**/src/**/*.ts' --ignore-pattern 'packages/**/*.d.ts' --fix | snazzy",
    "format": "prettier --write \"packages/**/src/**/*.ts\"",
    "docs": "typedoc packages/**/src/main --ignoreCompilerErrors && touch ./docs/.nojekyll || exit 0",
    "postupdate": "yarn && yarn bootstrap && npx yarn-audit-fix --audit-level=moderate --npm-v7 && yarn build && yarn test"
  },
  "devDependencies": {
    "coveralls": "3.1.0",
    "eslint": "7.14.0",
    "eslint-config-qiwi": "1.10.0",
    "eslint-config-prettier": "^7.0.0",
    "prettier": "^2.2.0",
    "prettier-config-qiwi": "^1.3.0",
    "esm": "3.2.25",
    "find-git-root": "1.0.4",
    "jest": "26.6.3",
    "lerna": "3.22.1",
    "lodash": "4.17.20",
    "replace-in-file": "^6.1.0",
    "snazzy": "9.0.0",
    "yargs": "16.1.1",
    "typescript": "4.0.x"
  },
  "jest": {
    "collectCoverage": true,
    "projects": [
      "<rootDir>/packages/types/jest.config.json",
      "<rootDir>/packages/abstract/jest.config.json",
      "<rootDir>/packages/std/jest.config.json",
      "<rootDir>/packages/facade/jest.config.json"
    ]
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/qiwi/substrate.git"
  },
  "keywords": [],
  "bugs": {
    "url": "https://github.com/qiwi/substrate/issues"
  }
}
