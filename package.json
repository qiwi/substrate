{
  "name": "qiwi-substrate-monorepo",
  "workspaces": [
    "packages/*"
  ],
  "version": "1.17.0",
  "private": true,
  "scripts": {
    "clean": "lerna clean --yes && lerna run clean && yarn clean:target && yarn clean:buildcache && yarn clean:docs",
    "prebuild": "tsc -b packages/facade/tsconfig.json",
    "clean:buildcache": "rm -rf packages/**/buildcache",
    "clean:target": "rm -rf packages/**/target",
    "clean:docs": "rm -rf packages/**/docs",
    "build": "yarn clean && yarn prebuild && lerna run build --stream --concurrency 2",
    "libdef": "yarn clean && lerna run --stream libdef",
    "bootstrap": "lerna bootstrap",
    "test": "lerna run --stream test && yarn lint",
    "jest": "jest",
    "test:report": "yarn test && yarn codeclimate:push && yarn coveralls:push",
    "codeclimate:push": "codeclimate-test-reporter < ./coverage/lcov.info",
    "coveralls:push": "cat ./coverage/lcov.info | coveralls",
    "lint": "eslint 'packages/**/src/**/*.ts' --ignore-pattern 'packages/**/*.d.ts' --fix | snazzy",
    "docs": "typedoc packages/**/src/main --ignoreCompilerErrors && touch ./docs/.nojekyll || exit 0",
    "release": "multi-semantic-release --execasync",
    "postupdate": "yarn && yarn bootstrap && yarn build && yarn test"
  },
  "devDependencies": {
    "@qiwi/license": "1.1.2",
    "@qiwi/multi-semantic-release": "2.4.3",
    "@qiwi/semantic-release-gh-pages-plugin": "1.16.0",
    "@semantic-release/changelog": "5.0.1",
    "@semantic-release/commit-analyzer": "8.0.1",
    "@semantic-release/git": "9.0.0",
    "@semantic-release/github": "7.0.5",
    "@semantic-release/npm": "7.0.5",
    "@semantic-release/release-notes-generator": "9.0.1",
    "@types/jest": "25.2.1",
    "@types/lodash": "4.14.150",
    "@types/node": "13.13.5",
    "@typescript-eslint/parser": "2.32.0",
    "codeclimate-test-reporter": "0.5.1",
    "coveralls": "3.1.0",
    "eslint": "7.0.0",
    "eslint-config-qiwi": "1.3.3",
    "esm": "3.2.25",
    "jest": "26.0.1",
    "lerna": "3.20.2",
    "lodash": "4.17.15",
    "replace-in-file": "6.0.0",
    "semantic-release": "17.0.7",
    "snazzy": "8.0.0",
    "ts-jest": "25.5.1",
    "typedoc": "0.17.6",
    "typedoc-plugin-external-module-name": "3.1.0",
    "typescript": "3.9.3",
    "yargs": "15.3.1"
  },
  "jest": {
    "collectCoverage": true,
    "projects": [
      "<rootDir>/packages/types/jest.config.json",
      "<rootDir>/packages/abstract/jest.config.json",
      "<rootDir>/packages/std/jest.config.json",
      "<rootDir>/packages/facade/jest.config.json"
    ]
  },
  "dependencies": {},
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/qiwi/substrate.git"
  },
  "keywords": [],
  "bugs": {
    "url": "https://github.com/qiwi/substrate/issues"
  }
}
