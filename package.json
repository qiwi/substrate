{
  "name": "qiwi-substrate-monorepo",
  "workspaces": [
    "packages/*"
  ],
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "clean": "yarn workspaces foreach -tp run clean",
    "prebuild": "tsc -b packages/facade/tsconfig.json",
    "build": "yarn prebuild && yarn workspaces foreach -tp run build && yarn format",
    "libdef": "yarn workspaces foreach -tp run  libdef",
    "test": "yarn workspaces foreach -tp run test && yarn lint",
    "test:report": "yarn test && yarn coveralls:push",
    "coveralls:push": "cat ./coverage/lcov.info | npm_config_yes=true npx coveralls || exit 0",
    "lint": "eslint 'packages/**/src/**/*.ts' --ignore-pattern 'packages/**/*.d.ts' --fix | snazzy",
    "format": "prettier --write \"packages/**/src/**/*.ts\"",
    "docs": "typedoc packages/**/src/main && touch ./docs/.nojekyll || exit 0",
    "deps:upgrade": "npm_config_yes=true npx npm-upgrade-monorepo",
    "deps:auditfix": "npm_config_yes=true npx yarn-audit-fix",
    "postupdate": "yarn && yarn deps:auditfix && yarn build && yarn test"
  },
  "prettier": "prettier-config-qiwi",
  "devDependencies": {
    "eslint": "8.8.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-qiwi": "1.16.0",
    "find-git-root": "1.0.4",
    "lerna": "4.0.0",
    "lodash": "4.17.21",
    "prettier": "^2.5.1",
    "prettier-config-qiwi": "^1.6.0",
    "replace-in-file": "^6.3.2",
    "snazzy": "9.0.0",
    "typescript": "4.5.x",
    "yargs": "17.3.1"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/qiwi/substrate.git"
  },
  "keywords": [],
  "bugs": {
    "url": "https://github.com/qiwi/substrate/issues"
  },
  "packageManager": "yarn@3.1.1"
}
