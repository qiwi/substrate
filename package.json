{
  "name": "qiwi-substrate-monorepo",
  "workspaces": [
    "packages/*"
  ],
  "version": "1.17.0",
  "private": true,
  "scripts": {
    "clean": "lerna clean --yes && lerna run clean && yarn clean:target && yarn clean:buildcache && yarn clean:docs",
    "prebuild": "tsc -b packages/facade/tsconfig.json",
    "clean:buildcache": "rm -rf packages/**/buildcache",
    "clean:target": "rm -rf packages/**/target",
    "clean:docs": "rm -rf packages/**/docs",
    "build": "yarn clean && yarn prebuild && lerna run build --stream --concurrency 2",
    "libdef": "yarn clean && lerna run --stream libdef",
    "bootstrap": "lerna bootstrap",
    "test": "lerna run --stream test && yarn lint",
    "jest": "jest",
    "test:report": "yarn test && yarn codeclimate:push && yarn coveralls:push",
    "codeclimate:push": "codeclimate-test-reporter < ./coverage/lcov.info",
    "coveralls:push": "cat ./coverage/lcov.info | coveralls",
    "lint": "eslint 'packages/**/src/**/*.ts' --ignore-pattern 'packages/**/*.d.ts' --fix | snazzy",
    "docs": "typedoc packages/**/src/main --ignoreCompilerErrors || exit 0",
    "release": "multi-semantic-release --execasync",
    "postupdate": "yarn && yarn bootstrap && yarn build && yarn test"
  },
  "devDependencies": {
    "@qiwi/multi-semantic-release": "^2.0.0",
    "@qiwi/semantic-release-gh-pages-plugin": "^1.15.8",
    "@semantic-release/changelog": "^3.0.6",
    "@semantic-release/commit-analyzer": "^7.0.0",
    "@semantic-release/git": "8.0.0",
    "@semantic-release/github": "6.0.2",
    "@semantic-release/npm": "6.0.0",
    "@semantic-release/release-notes-generator": "7.3.5",
    "@types/jest": "^24.9.0",
    "@types/lodash": "^4.14.149",
    "@types/node": "^13.1.8",
    "@typescript-eslint/parser": "^2.16.0",
    "codeclimate-test-reporter": "^0.5.1",
    "coveralls": "^3.0.9",
    "eslint": "^6.8.0",
    "eslint-config-qiwi": "^1.3.1",
    "esm": "^3.2.25",
    "jest": "^24.9.0",
    "lerna": "^3.20.2",
    "lodash": "^4.17.15",
    "replace-in-file": "^5.0.2",
    "semantic-release": "16.0.4",
    "snazzy": "^8.0.0",
    "ts-jest": "^24.3.0",
    "tslint": "^5.20.1",
    "tslint-config-standard": "^9.0.0",
    "typedoc": "0.15.8",
    "typedoc-plugin-external-module-name": "3.0.0",
    "typescript": "^3.7.5",
    "yargs": "^15.1.0"
  },
  "jest": {
    "collectCoverage": true,
    "projects": [
      "<rootDir>/packages/types/jest.config.json",
      "<rootDir>/packages/facade/jest.config.json"
    ]
  }
}
