{
  "name": "@qiwi/substrate",
  "version": "1.17.12",
  "main": "target/es5/index.js",
  "source": "target/ts/index.ts",
  "types": "target/es5/index.d.ts",
  "typescript": {
    "definition": "target/es5/index.d.ts"
  },
  "typesVersions": {
    ">=3.1": {
      "*": [
        "target/es5/index.d.ts",
        "src/test/ts/*"
      ]
    }
  },
  "scripts": {
    "clean": "rm -rf target",
    "build": "yarn build:es5 && yarn build:es6 && yarn build:ts && yarn libdef",
    "build:es5": "mkdir -p target/es5 && tsc -p ./tsconfig.json --target ES5 --outDir target/es5",
    "build:es6": "mkdir -p target/es6 && tsc -p ./tsconfig.json --target ES6 --outDir target/es6",
    "build:ts": "cp -r src/main/ts/ target/ts/",
    "libdef": "yarn dtsgen && yarn libdeffix && yarn flowgen",
    "libdeffix": "node -r esm ../../scripts/js/libdef-fix.js --flow=./typings/index.flow.js --dts=./typings/index.d.ts",
    "dtsgen": "dts-generator --project ./ --out typings/index.d.ts --prefix @qiwi/substrate/target/es5 --name @qiwi/substrate --main @qiwi/substrate/target/es5/index",
    "flowgen": "flowgen typings/index.d.ts --output-file typings/index.flow.js",
    "testgen": "cp typings/index.d.ts src/test/ts/index.d.ts && cp -r ../types/src/test/ts/libdef/I*.ts src/test/ts/libdef && cp -r ../abstract/src/test/ts/unit/*.ts src/test/ts/unit",
    "test": "yarn testgen && yarn dtslint && yarn jest",
    "jest": "jest --config=jest.config.json",
    "dtslint": "dtslint src/test/ts/libdef --localTs ../../node_modules/typescript/lib --expectOnly"
  },
  "files": [
    "README.md",
    "CHANGELOG.md",
    "typings",
    "target"
  ],
  "dependencies": {
    "@qiwi/substrate-types": "^1.20.1",
    "@qiwi/substrate-abstract": "^1.17.12",
    "@qiwi/substrate-std": "*"
  },
  "devDependencies": {
    "@types/jest": "^24.0.24",
    "@types/node": "^12.12.21",
    "dts-generator": "^3.0.0",
    "dtslint": "^2.0.2",
    "esm": "^3.2.25",
    "flowgen": "^1.10.0",
    "fs-extra": "^8.1.0",
    "replace-in-file": "^5.0.2",
    "ts-loader": "^6.2.1",
    "ts-node": "^8.5.4",
    "ts-to-flow": "^0.0.3",
    "typescript": "3.7.4"
  },
  "esm": {
    "mode": "all",
    "cjs": true
  },
  "peerDependencies": {},
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/qiwi/substrate.git"
  },
  "keywords": [],
  "bugs": {
    "url": "https://github.com/qiwi/substrate/issues"
  }
}
