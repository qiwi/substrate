{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "lib": ["es6", "dom"],
    "skipLibCheck": true,
    "baseUrl": ".",
    "typeRoots": ["."],
    "esModuleInterop": true
  },
  "include": [
    "./*"
  ],
  "exclude": [
    "node_modules"
  ]
}
